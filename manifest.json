{ 
    "manifest_version": 3,
    "name": "Youtube Summariser",
    "description": "An extension to summarize youtube videos using the transcript",
    "version": "1.0",
    "permissions": ["activeTab", "declarativeContent"],
    "host_permissions": ["http://127.0.0.1:5000/*"],
    
    "action": {
        "default_title": "Summarise this video",
        "default_icon": {
            "16": "extension/images/icon.png",
            "32": "extension/images/icon.png",
            "48": "extension/images/icon.png",
            "128": "extension/images/icon.png"
        },
        "default_popup": "extension/popup.html"
    },

    "icons": {
        "16": "extension/images/icon.png",
        "32": "extension/images/icon.png",
        "48": "extension/images/icon.png",
        "128": "extension/images/icon.png"
    }
}